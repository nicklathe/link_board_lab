<div class="col-md-12 text-center">
  <h1>Signup</h1>
</div>
<div class="col-md-8 col-md-offset-2">
  <%= form_for :user do |f| %>
  <%= f.text_field :email, placeholder: "Enter your email" %>
  <%= f.text_field :name, placeholder: "Enter your username" %>
  <%= f.text_field :password, placeholder: "Ender a password" %>
  <%= f.text_field :password_confirmation, placeholder: "Re-Enter your password" %>
  <%= f.submit "Signup" %>
  <% end %>
</div>